{
  "name": "react-state-validator",
  "version": "1.1.0",
  "description": "A simple API to validate your React components state as it changes in time",
  "main": "lib/index.js",
  "jsnext:main": "src/index.js",
  "scripts": {
    "lint": "eslint src tests",
    "test": "NODE_ENV=test mocha --compilers js:babel-core/register tests/index.js",
    "test:watch": "npm test -- --watch",
    "bundle": "NODE_ENV=production webpack --colors --progress",
    "lib": "babel src --out-dir lib",
    "build": "npm run test && npm run lint && npm run lib && npm run bundle"
  },
  "author": "Mathieu ANCELIN",
  "homepage": "https://github.com/mathieuancelin/react-state-validator",
  "repository": {
    "type": "git",
    "url": "https://github.com/mathieuancelin/react-state-validator.git"
  },
  "bugs": {
    "url": "https://github.com/mathieuancelin/react-state-validator"
  },
  "license": "MIT",
  "keywords": [
    "react",
    "utils",
    "validator",
    "state validator",
    "higher order component"
  ],
  "peerDependencies": {
    "react": "^0.14.0 || ^15.0.0"
  },
  "devDependencies": {
    "babel": "^6.5.2",
    "babel-cli": "^6.11.4",
    "babel-core": "^6.13.2",
    "babel-eslint": "^6.1.2",
    "babel-loader": "^6.2.5",
    "babel-preset-es2015": "^6.13.2",
    "babel-preset-react": "^6.11.1",
    "babel-preset-stage-0": "^6.5.0",
    "chai": "^3.5.0",
    "eslint": "^3.3.1",
    "eslint-config-airbnb": "^10.0.1",
    "eslint-plugin-import": "^1.14.0",
    "eslint-plugin-jsx-a11y": "^2.1.0",
    "eslint-plugin-react": "^6.1.2",
    "jsdom": "^9.4.2",
    "mocha": "^3.0.2",
    "react-addons-test-utils": "^15.3.1",
    "webpack": "^1.13.2"
  },
  "dependencies": {}
}
