{
  "name": "react-state-validator",
  "version": "1.0.3",
  "description": "A simple API to validate your React components state as it changes in time",
  "main": "lib/index.js",
  "jsnext:main": "src/index.js",
  "scripts": {
    "lint": "eslint src tests",
    "test": "NODE_ENV=test mocha --compilers js:babel-core/register tests/index.js",
    "test:watch": "npm test -- --watch",
    "bundle": "NODE_ENV=production webpack -p --colors --progress",
    "lib": "babel src --out-dir lib",
    "build": "npm run test && npm run lint && npm run lib && npm run bundle"
  },
  "author": "Mathieu ANCELIN",
  "homepage": "https://github.com/mathieuancelin/react-state-validator",
  "repository": {
    "type": "git",
    "url": "https://github.com/mathieuancelin/react-state-validator.git"
  },
  "bugs": {
    "url": "https://github.com/mathieuancelin/react-state-validator"
  },
  "license": "MIT",
  "keywords": [
    "react",
    "utils",
    "validator",
    "state validator",
    "higher order component"
  ],
  "peerDependencies": {
    "react": "^0.14.0"
  },
  "devDependencies": {
    "babel": "^6.5.2",
    "babel-cli": "^6.6.5",
    "babel-core": "^6.6.5",
    "babel-eslint": "^5.0.0",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "chai": "^3.5.0",
    "eslint": "^2.3.0",
    "eslint-config-airbnb": "^6.1.0",
    "eslint-plugin-react": "^4.2.0",
    "jsdom": "^8.1.0",
    "mocha": "^2.4.5",
    "react-addons-test-utils": "^0.14.7",
    "webpack": "^1.12.14"
  },
  "dependencies": {
  }
}
